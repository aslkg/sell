body,html
  line-height: 1
  font-weight: 200
  font-family: 'PingFang SC','STHeitiSC-Light','Helvetica-Light',arial,sans-serif

.clearfix
  display: inline-block
  &:after
    display: block
    content: ""
    height: 0
    line-height: 0
    clear: both
    visibility: hidden
.border-1px
  &::after
    -webkit-transform: scaleY(0.7)
    transform:scaleY(0.7)
